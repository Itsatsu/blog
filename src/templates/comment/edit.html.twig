{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="/public/assets/style/modifpost.css">
{% endblock %}
{% block title %}Editer un post{% endblock %}

{% block body %}
    <div>
    <h2 >Modification d'un commentaire</h2>
    </div>
    <div class="contenu">

        <article class="post" >
            <form method="POST">
                <h2>Modifier votre commentaire</h2>
                {% if errors is defined %}
                    {% for key, value in errors %}
                        <p class="alert alert-{{key}}">
                            {{ value }}
                        </p>
                    {% endfor %}
                {% endif %}
                <input type="texte" name="update[title]" placeholder="{{ comment.title }}" value="{{ comment.title }}">
                <textarea name="update[content]" id="" cols="30" rows="10" placeholder="{{ comment.content }}">{{ comment.content}}</textarea>
                <div style="display: flex; justify-content: space-between; width: 80%">
                    <p>Date de création: {{ post.createdAt | date('d/m/Y H:i:s') }}</p>
                    <p>Date de la dernière modification: {{ post.updatedAt | date('d/m/Y H:i:s') }}</p>
                </div>

                <input type="submit" value="Modifier">
            </form>
        </article>
        </div>
{% endblock %}