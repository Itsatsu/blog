{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="/public/assets/style/allpost.css">
{% endblock %}
{% block title %}Dashboard:liste des commentaires{% endblock %}

{% block body %}
    <div>
        <h2>Liste des commentaires non valid√©</h2>
    </div>
    <div class="contenu">

    <div class="col">
        {% for comment in comments %}
            {% if loop.index is even %}
                <article>
                    <h2>{{ comment.title }}</h2>
                    <p>{{ comment.content | slice(0,150) }}</p>
                    <p class="date">Date de modification: {{ comment.updatedAt | date('d/m/Y H:i:s') }}</p>
                    <div style="display: flex; justify-content: space-between">
                            <a href="/administration/comments/detail/{{ comment.id }}">Voir +</a>
                            <a href="/administration/comments/validation/{{ comment.id }}"> Valider </a>
                            <a href="/administration/comments/delete/{{ comment.id }}">Supprimer </a>
                    </div>
                </article>
            {% endif %}
        {% endfor %}
    </div>
    <div class="col">
        {% for comment in comments %}
            {% if loop.index is odd %}
                <article>
                    <h2>{{ comment.title }}</h2>
                    <p>{{ comment.content | slice(0,150) }}</p>
                    <p class="date">Date de modification: {{ comment.updatedAt | date('d/m/Y H:i:s') }}</p>
                    <div style="display: flex; justify-content: space-between">
                        <a href="/administration/comments/detail/{{ comment.id }}">Voir +</a>
                        <a href="/administration/comments/validation/{{ comment.id }}"> Valider </a>
                        <a href="/administration/comments/delete/{{ comment.id }}">Supprimer </a>
                    </div>
                </article>
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}