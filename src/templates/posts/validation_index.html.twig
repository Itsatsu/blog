{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="/public/assets/style/allpost.css">
{% endblock %}
{% block title %}Dashboard:liste des catégories{% endblock %}

{% block body %}
    <div>
        <h2>Liste des postes non validé</h2>
    </div>
    <div class="contenu">

    <div class="col">
        {% for post in posts %}
            {% if loop.index is even %}
                <article>
                    <h2>{{ post.title }}</h2>
                    <h3>{{ post.subtitle }}</h3>
                    <p>{{ post.content | slice(0,150) }}</p>
                    <p class="date">Date de modification: {{ post.updatedAt | date('d/m/Y H:i:s') }}</p>
                    <div style="display: flex; justify-content: space-between">
                            <a href="/administration/posts/detail/{{ post.id }}">Voir le post complet</a>
                            <a href="/administration/posts/validation/{{ post.id }}"> Valider le post</a>
                            <a href="/administration/posts/delete/{{ post.id }}">Supprimer le post</a>
                    </div>
                </article>
            {% endif %}
        {% endfor %}
    </div>
    <div class="col">
        {% for post in posts %}
            {% if loop.index is odd %}
                <article>
                    <h2>{{ post.title }}</h2>
                    <h3>{{ post.subtitle }}</h3>
                    <p>{{ post.content | slice(0,150) }}</p>
                    <p class="date">Date de modification: {{ post.updatedAt | date('d/m/Y H:i:s') }}</p>
                    <div style="display: flex; justify-content: space-between">
                        <a href="/administration/posts/detail/{{ post.id }}">Voir le post complet</a>
                        <a href="/administration/posts/validation/{{ post.id }}"> Valider le post</a>
                        <a href="/administration/posts/delete/{{ post.id }}">Supprimer le post</a>
                    </div>
                </article>
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}