{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="/public/assets/style/allpost.css">
{% endblock %}
{% block title %}Dashboard:liste des catégories{% endblock %}

{% block body %}
    <div>
        <h2>Liste des catégories</h2>
        <a href="/administration/categorie/create">Ajouter une catégorie</a>
    </div>
    <div class="contenu">

    <div class="col">
        {% for categorie in categories %}
            {% if loop.index is even %}
                <article>
                    <h2 style="text-align: center">{{ categorie.name }}</h2>
                    <a href="/administration/categorie/edit/{{ categorie.id }}">Modifier</a>
                </article>
            {% endif %}
        {% endfor %}
    </div>
    <div class="col">
        {% for categorie in categories %}
            {% if loop.index is odd %}
                    <article>
                        <h2 style="text-align: center" >{{ categorie.name }}</h2>
                        <a href="/administration/categorie/edit/{{ categorie.id }}">Modifier</a>
                    </article>
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}