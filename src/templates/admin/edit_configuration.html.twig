{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="/public/assets/style/modifpost.css">
{% endblock %}
{% block title %}Editer un post{% endblock %}

{% block body %}
    <div>
    <h2 >modification d'un post</h2>
    </div>
    <div class="contenu">

        <article class="post" >
            <form method="POST">
                <h2>Modifier votre configuration</h2>
                <input type="texte" name="update[fullname]" placeholder="{{ config.fullname }}" value="{{ config.fullname }}">
                <input type="texte" name="update[title]" placeholder="{{ config.title }}" value="{{ config.title}}">
                <input type="texte" name="update[slogan]" placeholder="{{ config.slogan }}" value="{{ config.slogan }}">
                <input type="color" name="update[color_primary]"  value="{{ config.colorPrimary }}">
                <input type="color" name="update[color_secondary]" value="{{ config.colorSecondary }}">
                <input type="file" name="update[cv]" placeholder="" value="{{ config.cv }}">
                <input type="submit" value="Modifier">
            </form>
        </article>
        </div>
{% endblock %}